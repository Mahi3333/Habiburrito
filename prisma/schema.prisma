// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model MenuItem {
  id         Int                @id @default(autoincrement())
  name       String
  item_type  String             // 'BYO', 'SIGNATURE', 'EXTRA'
  base_price Float?             // Required for SIGNATURE/EXTRA, optional for BYO if base price is 0 or handled differently
  modifiers  ItemModifierLink[]
}

model Modifier {
  id            Int                @id @default(autoincrement())
  name          String
  max_selection Int
  options       ModifierOption[]
  items         ItemModifierLink[]
}

model ModifierOption {
  id               Int      @id @default(autoincrement())
  modifier_id      Int
  modifier         Modifier @relation(fields: [modifier_id], references: [id])
  name             String
  price_adjustment Float    @default(0.00)
}

model ItemModifierLink {
  item_id     Int
  modifier_id Int
  item        MenuItem @relation(fields: [item_id], references: [id])
  modifier    Modifier @relation(fields: [modifier_id], references: [id])

  @@id([item_id, modifier_id])
}

model Order {
  id                       Int         @id @default(autoincrement())
  user_id                  Int?        // Optional FK to User
  user                     User?       @relation(fields: [user_id], references: [id])
  total_amount             Float
  tax_amount               Float
  status                   String      @default("PENDING_PAYMENT")
  stripe_payment_intent_id String      @unique
  created_at               DateTime    @default(now())
  items                    OrderItem[]
}

model OrderItem {
  id           Int    @id @default(autoincrement())
  order_id     Int
  order        Order  @relation(fields: [order_id], references: [id])
  item_name    String
  quantity     Int
  json_details String // Stores full JSON structure of the item
}

model User {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  email         String?  @unique
  password_hash String
  role          String   @default("CUSTOMER") // 'ADMIN', 'CUSTOMER'
  rewards_points Int     @default(0)
  orders        Order[]
  created_at    DateTime @default(now())
}
